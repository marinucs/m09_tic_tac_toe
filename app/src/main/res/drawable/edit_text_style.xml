<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--background to compensate the transparency under shadow and glow (for bigger et_depth values)-->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="5dp" />
            <solid
                android:color="@color/darker_dark_background" />
        </shape>
    </item>

    <!--top, dark, inner shadow-->
    <item
        android:bottom="@dimen/et_depth">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="5dp" />
            <solid
                android:color="@color/color_foreground" />
        </shape>
    </item>

    <!--bottom, light, outer glow-->
    <item
        android:top="@dimen/et_depth">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="5dp" />
            <solid
                android:color="@color/color_foreground" />
        </shape>
    </item>

    <!--your color-->
    <item
        android:top="@dimen/et_depth"
        android:bottom="@dimen/et_depth">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="5dp" />
            <solid
                android:color="@color/darker_dark_background" />
        </shape>
    </item>

</layer-list>